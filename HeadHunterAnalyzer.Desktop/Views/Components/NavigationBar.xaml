<UserControl x:Class="HeadHunterAnalyzer.Desktop.Views.Components.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeadHunterAnalyzer.Desktop.Views.Components"
             mc:Ignorable="d">

	<StackPanel
		Orientation="Horizontal">

		<Button
			Content="Слова"
			Command="{Binding WordsAnalyticsNavigationCommand}" />
		<Button
			Content="Вакансии"
			Command="{Binding AnalyzedVacanciesNavigationCommand}" />

		<StackPanel.Resources>
			<Style TargetType="Button">
				<Setter Property="Padding" Value="8 0" />
				<Setter Property="Margin" Value="2 0" />
			</Style>
		</StackPanel.Resources>
	</StackPanel>

</UserControl>
